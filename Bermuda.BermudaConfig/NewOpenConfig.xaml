<Window x:Class="Bermuda.BermudaConfig.NewOpenConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New/Open Configuration" Height="150" Width="200" WindowStyle="ToolWindow" Background="AliceBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="btnNew" Content="New" Height="30" Width="150" Grid.Row="0" Click="btnNew_Click"/>
        <Button Name="btnOpen" Content="Open" Height="30" Width="150" Grid.Row="1" Click="btnOpen_Click"/>
    </Grid>
</Window>
